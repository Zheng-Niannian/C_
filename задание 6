#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, R;
    printf("请输入数组X的大小: ");
    scanf("%d", &n);

    int* X = (int*)malloc(n * sizeof(int)); 
    int* Y = (int*)malloc(n * sizeof(int)); 


    printf("请输入数组X的元素:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &X[i]); 
    }

    printf("请输入R的值: ");
    scanf("%d", &R);

    int yIndex = 0; 


    for (int i = n - 1; i >= 0; i--) {

        if (abs(X[i]) <= R) {
            Y[yIndex] = X[i]; 
            yIndex++; 
        }
    }

    printf("得到的数组Y的元素（逆序）:\n");
    for (int i = 0; i < yIndex; i++) {
        printf("%d ", Y[i]);
    }
    printf("\n");

    free(X); 
    free(Y);

    return 0;
}
